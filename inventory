using System.Collections;
using System.Collections.Generic;
using UnityEngine;
using UnityEngine.Events;

public class inventory : MonoBehaviour
{
    public static GameObject part1;
    public static GameObject part2;
    public static GameObject part3;
    public static GameObject part4;
    public static GameObject part5;
    public UnityEvent win;
    public UnityEvent restart;



    private void Start()
    {
        part1 = GameObject.Find("thrusterLeftInv");
        part2 = GameObject.Find("thrusterRightInv");
        part3 = GameObject.Find("wingLeftInv");
        part4 = GameObject.Find("wingRightInv");
        part5 = GameObject.Find("doorInv");

    }

    public void Update()
    {
        if (part1.activeSelf == true && part2.activeSelf == true && part3.activeSelf == true &&
            part4.activeSelf == true && part5.activeSelf == true)

            win.Invoke();

        else
        {
            restart.Invoke();
        }
    }

}
